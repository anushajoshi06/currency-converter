<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/indiancurrencyeditText"
        android:layout_width="384dp"
        android:layout_height="68dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="108dp"
        android:layout_marginBottom="156dp"
        android:ems="10"
        android:hint="enter the currency in indian rupees"
        android:inputType="number"
        android:onClick="convert"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="160dp"
        android:onClick="convert"
        android:text="convert"
        app:layout_constraintEnd_toEndOf="@+id/indiancurrencyeditText"
        app:layout_constraintTop_toBottomOf="@+id/indiancurrencyeditText" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="368dp"
        android:layout_height="157dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="272dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/indiancurrencyeditText"
        app:srcCompat="@drawable/download" />

</android.support.constraint.ConstraintLayout>